# Email sender address (the account that sends the summary)
DAILY_SUMMARY_EMAIL_FROM=

# Recipient address (where the summary is delivered)
DAILY_SUMMARY_EMAIL_TO=

# Email account password or app-specific password
DAILY_SUMMARY_EMAIL_PASSWORD=

# SMTP server (e.g., smtp.gmail.com, smtp.office365.com)
DAILY_SUMMARY_EMAIL_SMTP=

# SMTP port (587 is standard for TLS)
DAILY_SUMMARY_EMAIL_PORT=587